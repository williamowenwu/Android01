<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/previous_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Search button -->
    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:drawable/ic_menu_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title TextView -->
    <TextView
        android:id="@+id/albumTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@+id/returnButton"
        app:layout_constraintBottom_toBottomOf="@+id/returnButton"
        app:layout_constraintStart_toEndOf="@+id/returnButton"
        app:layout_constraintEnd_toStartOf="@+id/searchButton"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Previous Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/previousButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="256dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/albumTitleTextView"
        app:srcCompat="@drawable/previous_icon" />

    <!-- Add Tag button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTagButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="364dp"
        android:clickable="true"
        app:layout_constraintEnd_toStartOf="@+id/nextButton"
        app:layout_constraintStart_toEndOf="@+id/previousButton"
        app:layout_constraintTop_toBottomOf="@id/albumTitleTextView"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <!-- Next button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@id/previousButton"
        app:layout_constraintTop_toTopOf="@id/previousButton"
        app:srcCompat="@drawable/next_icon" />

    <ImageView
        android:id="@+id/slideImageView"
        android:layout_width="376dp"
        android:layout_height="322dp"
        app:layout_constraintBottom_toBottomOf="@+id/addTagButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albumTitleTextView"
        app:layout_constraintVertical_bias="0.326"
        app:srcCompat="@drawable/placeholder_image" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagRecyclerView"
        android:layout_width="379dp"
        android:layout_height="139dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slideImageView"
        app:layout_constraintVertical_bias="0.715" />

</androidx.constraintlayout.widget.ConstraintLayout>
